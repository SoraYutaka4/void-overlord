{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    // "rootDir": "./src",
    "rootDirs": ["./src/bot/**/*"],
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "strict": true,
    // "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true, 
    "allowJs": true    
  },
  "include": ["src/**/*", "src/bot/types/*"],
  "ts-node": {
    "loader": "ts-node/esm",
    "esm": true           
  }
}
